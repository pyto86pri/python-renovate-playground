{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergePatch"
  ],
  "timezone": "Asia/Tokyo",
  "assignees": [
    "pyto86pri"
  ],
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "depTypeList": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "groupName": "boto3",
      "packageNames": [
        "boto3",
        "botocore"
      ]
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^Dockerfile$"
      ],
      "matchStrings": [
        "POETRY_VERSION=(?<currentValue>.*?)( |\n)"
      ],
      "depNameTemplate": "poetry",
      "datasourceTemplate": "pypi"
    },
    {
      "fileMatch": [
        "^\\.python-version$"
      ],
      "matchStrings": [
        "^(?<currentValue>.*?)$"
      ],
      "depNameTemplate": "python",
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": [
        "(^|/|\\.)pyproject.toml$"
      ],
      "matchStrings": [
        "python = \"(?<currentValue>.*?)\""
      ],
      "depNameTemplate": "python/cpython",
      "datasourceTemplate": "github-releases"
    }
  ]
}
